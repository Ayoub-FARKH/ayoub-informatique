# Configuration du serveur de développement
PORT=3000
HOST=localhost
NODE_ENV=development

# Configuration EmailJS (à remplir quand vous aurez un compte)
EMAILJS_SERVICE_ID=votre_service_id
EMAILJS_TEMPLATE_ID=votre_template_id
EMAILJS_PUBLIC_KEY=votre_cle_publique

# Configuration de sécurité (optionnel)
HTTPS=false
SSL_KEY_PATH=./ssl/key.pem
SSL_CERT_PATH=./ssl/cert.pem

# Configuration de déploiement
GITHUB_REPO=ayoub-services-informatique/ayoub-services-informatique.github.io
DEPLOY_BRANCH=gh-pages

# Configuration des sauvegardes
BACKUP_DIR=./backups
MAX_BACKUPS=10

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Configuration des performances
CACHE_MAX_AGE=3600
COMPRESSION_LEVEL=6

# Configuration PWA
PWA_ENABLED=true
PWA_THEME_COLOR=#2dd4bf
PWA_BACKGROUND_COLOR=#0b1320